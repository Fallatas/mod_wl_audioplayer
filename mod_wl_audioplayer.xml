<extension type="module" version="3.8.0" method="upgrade">
    <name>MOD_WL_AUDIOPLAYER</name>
    <creationDate>21.11.2018</creationDate>
    <author>Thomas Winterling</author>
    <authorEmail>info@winterling-labs.com</authorEmail>
    <authorUrl>https://www.winterling-labs.com</authorUrl>
    <license>GNU/GPLv2 only</license>
    <version>1.0.0.0</version>
    <description>MOD_WL_AUDIOPLAYER_XML_DESCRIPTION</description>

    <files>
        <filename module="mod_wl_audioplayer">mod_wl_audioplayer.php</filename>
        <filename>helper.php</filename>
        <filename>single_audio.xml</filename>
        <folder>tmpl</folder>
    </files>

    <config>

        <fields name="params">

            <fieldset name="basic">

                <field
                        name= "params"
                        type= "subform"
                        label= "MOD_WL_AUDIOPLAYER"
                        min= "1"
                        max= "12"
                        required= "true"
                        formsource= "modules/mod_wl_audioplayer/single_audio.xml"
                        multiple= "true"
                        buttons= "add,remove"
                />

            </fieldset>
        </fields>

    </config>

    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.mod_wl_audioplayer.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_wl_audioplayer.sys.ini</language>
        <language tag="de-DE">de-DE/de-DE.mod_wl_audioplayer.ini</language>
        <language tag="de-DE">de-DE/de-DE.mod_wl_audioplayer.sys.ini</language>
    </languages>

    <media destination="mod_wl_audioplayer" folder="media">
        <folder>css</folder>
        <folder>js</folder>
    </media>
</extension>